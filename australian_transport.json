{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "Australian Transport by State",
  "data": {"url": "Australian_Transport.csv"},
  "layer": [
    {
      "mark": {"type": "circle", "opacity": 0.7},
      "encoding": {
        "x": {
          "field": "Vehicles_per_1000",
          "type": "quantitative",
          "title": "Vehicles per 1,000 People",
          "scale": {"domain": [600, 900]}
        },
        "y": {
          "field": "Deaths_per_100k",
          "type": "quantitative",
          "title": "Road Deaths per 100,000"
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "title": "State"
        },
        "size": {
          "field": "VKT_Billion",
          "type": "quantitative",
          "title": "Vehicle Kilometres Travelled (B)",
          "scale": {"range": [50, 1000]}
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Vehicles_per_1000", "type": "quantitative", "title": "Vehicles per 1,000 People", "format": ","},
          {"field": "Deaths_per_100k", "type": "quantitative", "title": "Road Deaths per 100,000", "format": ","},
          {"field": "VKT_Billion", "type": "quantitative", "title": "Vehicle Kilometres (Billion)", "format": ","},
          {"field": "Population", "type": "quantitative", "title": "Population (Millions)", "format": ","}
        ]
      }
    },
  {
    "mark": {"type": "text", "align": "left", "baseline": "top", "fontSize": 11, "color": "#555"},
    "data": {"values": [{}]},
    "encoding": {
      "x": {"value": 35},
      "y": {"value": 18},
      "text": {"value": "NT: Disproportionately high fatality rate despite lower vehicle and travel volumes"}
    }
  }
  ]
}